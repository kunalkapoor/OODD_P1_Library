<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Start</th>
      <th>End</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.email %></td>
        <td><%= booking.start %></td>
        <td><%= booking.end %></td>
        <td><%= booking.team %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Release', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
