<%= form_for(@user, :url => admins_path, :html => {:class => "form-horizontal"}) do |f| %>
    <% if user.errors.any? %>
        <div id="error_explanation" class="alert alert-dismissable alert-danger">
          <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.password_field :password, class: "form-control", placeholder: "Password (type in new password or leave blank for no change)", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.text_area :address, class: "form-control", placeholder: "Address" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.text_area :phone, class: "form-control", placeholder: "Phone Number" %>
      </div>
    </div>

    <br>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
    </div>
<% end %>
