<% if logged_in? and @users %>
    <div class="bs-docs-section clearfix">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <h1>Manage Admins</h1>
          </div>

          <div class="col-lg-10 col-lg-offset-1">
            <table class="table table-striped table-hover ">
              <thead>
              <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <% @users.each do |user| %>
                  <% if user.admin %>
                      <tr>
                        <td><%= user.email %></td>
                        <td><%= user.name %></td>
                        <td><%= user.address %></td>
                        <td><%= user.phone %></td>
                        <td><%= link_to 'Show', admin_path(user), class: "text-info" %></td>
                        <% if user.removable and current_user.email != user.email %>
                            <td><%= link_to 'Destroy', admin_path(user), method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger" %></td>
                        <% end %>
                      </tr>
                  <% end %>
              <% end %>
              </tbody>
            </table>
            <%= link_to 'New Admin', new_admin_path, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <%= link_to 'Back to Home', home_path, class: "btn btn-primary" %>
<% end %>


