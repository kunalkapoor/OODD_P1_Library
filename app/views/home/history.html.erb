<% if logged_in? %>
    <div class="bs-docs-section clearfix">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <h1>Search Booking History By</h1>
          </div>

          <div class="container">

            <h6>You can search booking history by user, room, or both.</h6>
            <% if current_user.admin %>
                <%= form_for(@booking, :url => bookings_path, :method => 'get', :html => {:class => "form-horizontal"}) do |f| %>
                    <% if @booking.errors.any? %>
                        <div id="error_explanation" class="alert alert-dismissable alert-danger">
                          <%= pluralize(@booking.errors.count, "error") %> prohibited this user from being saved:

                          <ul>
                            <% @booking.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                          </ul>
                        </div>
                    <% end %>

                    <div class="form-group">
                      <%= f.label :email, class: "col-lg-2 control-label" %>
                      <div class="col-lg-5">
                        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= f.label :room, class: "col-lg-2 control-label" %>
                      <div class="col-lg-5">
                        <%= f.number_field :room, class: "form-control", placeholder: "Room" %>
                      </div>
                    </div>

                    <br>
                    <div class="form-group">
                      <div class="col-lg-10 col-lg-offset-2">
                        <%= f.submit "Submit", class: "btn btn-default" %>
                      </div>
                    </div>
                <% end %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
    <%= link_to 'Back to Home', home_path, class: "btn btn-primary" %>
<% end %>