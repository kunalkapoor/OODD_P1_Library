<%= form_for(room, :html => {:class => "form-horizontal"}) do |f| %>
    <% if room.errors.any? %>
        <div id="error_explanation" class="alert alert-dismissable alert-danger">
          <%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:

          <ul>
            <% room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label 'Room Number', class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.number_field :number, class: "form-control", placeholder: "Room Number" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :building, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.select :building, [['D. H. Hill', 'D. H. Hill'], ['James B. Hunt', 'James B. Hunt']],
                     {}, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :size, class: "col-lg-2 control-label" %>
      <div class="col-lg-5">
        <%= f.select :size, [['Small (4)', 4], ['Medium (6)', 6], ['Large (12)', 12]],
                     {}, class: "form-control" %>
      </div>
    </div>

    <br>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
    </div>
<% end %>
