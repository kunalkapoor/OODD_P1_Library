<% if logged_in? and @rooms %>
    <div class="bs-docs-section clearfix">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <h1>Manage Rooms</h1>
          </div>

          <div class="col-lg-10 col-lg-offset-1">
            <table class="table table-striped table-hover ">
              <thead>
              <tr>
                <th>Number</th>
                <th>Building</th>
                <th>Size</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <% @rooms.each do |room| %>
                  <tr>
                    <td><%= room.number %></td>
                    <td><%= room.building %></td>
                    <td><%= room.sizetext %></td>
                    <td><%= link_to 'Show', room, class: "text-info" %></td>
                    <td><%= link_to 'Edit', edit_room_path(room), class: "text-warning" %></td>
                    <td><%= link_to 'Destroy', room, method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger" %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <%= link_to 'New Room', new_room_path, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <%= link_to 'Back to Home', home_path, class: "btn btn-primary" %>
<% end %>