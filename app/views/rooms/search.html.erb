<div class="bs-docs-section clearfix">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Search Room</h1>
      </div>

      <%= form_for(@room, :url => search_rooms_path, :method => 'get', :html => {:class => "form-horizontal"}) do |f| %>

          <div class="form-group">
            <%= f.label 'Room Number', class: "col-lg-2 control-label" %>
            <div class="col-lg-5">
              <%= f.number_field :number, class: "form-control", placeholder: "Room Number" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :building, class: "col-lg-2 control-label" %>
            <div class="col-lg-5">
              <%= f.select :building, [[nil, nil], ['D. H. Hill', 'D. H. Hill'], ['James B. Hunt', 'James B. Hunt']],
                           {}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :size, class: "col-lg-2 control-label" %>
            <div class="col-lg-5">
              <%= f.select :size, [[nil, nil], ['Small (4)', 4], ['Medium (6)', 6], ['Large (12)', 12]],
                           {}, class: "form-control" %>
            </div>
          </div>

          <br>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "Search", :name => nil, class: "btn btn-default" %>
            </div>
          </div>
      <% end %>

      <% if @rooms %>
          <div class="col-lg-10 col-lg-offset-1">
            <table class="table table-striped table-hover ">
              <thead>
              <tr>
                <th>Number</th>
                <th>Building</th>
                <th>Size</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <% @rooms.each do |room| %>
                  <tr>
                    <td><%= room.number %></td>
                    <td><%= room.building %></td>
                    <td><%= room.sizetext %></td>
                    <td><%= link_to 'Show', room, class: "text-info" %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
      <% end %>

    </div>
  </div>
</div>