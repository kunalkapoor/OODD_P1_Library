<% if logged_in? and @user %>
    <div class="bs-docs-section clearfix">
      <div class="row">
        <div class="col-lg-12">
          <div class="page-header">
            <h1>User Details</h1>
          </div>

          <div class="col-lg-10 col-lg-offset-1">
            <table class="table table-striped table-hover table-bordered">
              <tbody>
              <tr>
                <td class="col-lg-5">Email</td>
                <td class="active"><%= @user.email %></td>
              </tr>
              <tr>
                <td>Name</td>
                <td class="active"><%= @user.name %></td>
              </tr>
              <tr>
                <td>Address</td>
                <td class="active"><%= @user.address %></td>
              </tr>
              <tr>
                <td>Phone</td>
                <td class="active"><%= @user.phone %></td>
              </tr>
              <tr>
                <td>Admin?</td>
                <% if @user.admin %>
                    <td class="active">Yes</td>
                <% else %>
                    <td class="active">No</td>
                <% end %>
              </tr>
              <tr>
                <td>Has privilege to do multiple bookings?</td>
                <% if @user.privilege %>
                    <td class="success">Yes</td>
                <% else %>
                    <td class="danger">No</td>
                <% end %>
              </tr>
              </tbody>
            </table>
            <% if current_user.email == @user.email %>
                <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <% if logged_in? and current_user.admin %>
        <%= link_to 'Back to Users', users_path, class: "btn btn-primary" %>
    <% end %>
<% end %>